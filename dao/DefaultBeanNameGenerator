package com.msxf.dataSource.core;


/**
 * bean名称生成器
 */
public class DefaultBeanNameGenerator {
    public static String genBeanName(Object object){
        String simpleName = object.getClass().getSimpleName();
        String first = simpleName.substring(0, 1);
        first = first.toLowerCase();
        return first + simpleName.substring(1);
    }


    public String createSqlSessionFactoryBeanName(String dataSourceName){
        return "sqlSessionFactory_" + dataSourceName;
    }


    public String createDataSourceTransactionManagerBeanName(String dataSourceName){
        return "dataSourceTransactionManager_" + dataSourceName;
    }
}
